{% import 'macros.twig' as macro %}
<!doctype html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  {% block head %}
    <link rel="stylesheet" href="css/style.min.css">
  {% endblock %}
</head>
<body class="{{ bodyClass }}">
{% block sprite %}
  <div style="display: none;">
    {% include 'sprite_svg.twig' %}
  </div>
{% endblock %}

<div class="wrapper {{ classWrapper }}">
  {% block logo %}
    {% include 'logo.twig' %}
  {% endblock %}
  <main>
  {% block main %}{% endblock %}
  </main>

  {% include '../components/search.twig' %}
  {% include '../components/nav.twig' %}
</div>

{% block scripts %}
  <script src="js/vendor.min.js"></script>
  <script src="js/main.min.js"></script>
{% endblock %}
</body>
</html>
