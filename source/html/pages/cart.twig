{% block main %}
  <h1 class="visually-hidden">Корзина</h1>
  <div class="cart__container">
    <div class="cart__img-wrap">
      {{ macro.picture('', 'assorti', 802, 802, 'корзина фруктов', 'png', '') }}
    </div>
    <div class="cart__content-wrap">
    <div class="cart__content">
      <div class="order">
        <h2 class="order__title">Ваш заказ</h2>
        {% for item in order %}
          <div class="order__item">
            <div class="order__item-name">{{ item }}</div>
            <div>1кг</div>
            <div class="order__item-price" data-price="300">руб</div>
            <div>
              <button class="order__item-remove" type="button" aria-label="Удалить">
                {{ macro.svg('trash', 14, 15) }}
              </button>
            </div>
          </div>
        {% endfor %}
      </div>
      <p class="order__amount">
        <span class="order__total" data-total="0">Сумма:</span>руб
      </p>
      <button class="cart__btn-buy btn-buy btn-buy--red" type="button">Заказать</button>
    </div>
    </div>
  </div>
{% endblock %}

